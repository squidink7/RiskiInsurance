<UserControl xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="RiskiInsurance.MainView"
		>
	
	<Grid RowDefinitions="Auto,*,Auto" Margin="20" >
		<TextBlock Text="Insurance Management" HorizontalAlignment="Center" FontSize="32" FontWeight="Bold" Margin="10" />

		<StackPanel VerticalAlignment="Center" Grid.Row="1" >
			<Button Content="Add Record" Margin="10" Click="OpenAddRecord" />
			<Button Content="View Records" Margin="10" Click="OpenViewRecords" />
		</StackPanel>

		<TextBlock Text="Â© RiskiInsurance, 2023" HorizontalAlignment="Center" Grid.Row="2" Foreground="#888888" />
	</Grid>
	
	<UserControl.Styles>
		<Style Selector="Button">
			<Setter Property="HorizontalAlignment" Value="Stretch" />
			<Setter Property="HorizontalContentAlignment" Value="Center" />
			<Setter Property="VerticalContentAlignment" Value="Center" />
			<Setter Property="Height" Value="60" />
			<Setter Property="FontSize" Value="24" />
		</Style>
	</UserControl.Styles>
</UserControl>

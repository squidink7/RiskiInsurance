<UserControl xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="RiskiInsurance.RecordDetails" >
	<Panel>
		<Rectangle Fill="#77777777" />
		<Border Background="{DynamicResource SystemRegionBrush}" Width="300" Height="400" CornerRadius="14" Padding="15" >
			<Grid ColumnDefinitions="*, Auto" >
				<Button Grid.Column="1" Content="{Binding ExitButtonText}" VerticalAlignment="Top" Click="CloseDetails" />
				<Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" >
					<Label Content="Test" Grid.Row="1" Name="NameField" FontSize="24" FontWeight="Bold"/>
					<Label Content="Test" Grid.Row="2" Name="AgeField"/>
					<Label Content="Test" Grid.Row="3" Name="ExperienceField"/>
					<Label Content="Test" Grid.Row="4" Name="SkiPowerField"/>
					<Label Content="Test" Grid.Row="5" Name="SkiSeatsField"/>
					<Label Content="Test" Grid.Row="6" Name="SkiPriceField"/>
					<Label Content="Test" Grid.Row="7" Name="SkiAgeField"/>
					<Label Content="Test" Grid.Row="7" Name="ExcessField"/>
				</Grid>
			</Grid>
		</Border>
	</Panel>
	<UserControl.Styles>
		<Style Selector="Label">
			<Setter Property="Foreground" Value="White">
			</Setter>
		</Style>
	</UserControl.Styles>
</UserControl>
